@model NPX_Checkout_Application.Models.PaymentFormModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Payment Details</h5>
                    <form method="post" action="@Url.Action("SelectInstrument", "Home")">

                        <div class="form-group">
                            <label for="Amount">Amount:</label>
                            <input type="text" class="form-control" id="Amount" name="Amount" required>
                        </div>
                        <div class="form-group">
                            <label for="TransactionRemarks">Transaction Remarks:</label>
                            <input type="text" class="form-control" id="TransactionRemarks" name="TransactionRemarks">
                        </div>
                        <hr />
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-primary">Pay</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
